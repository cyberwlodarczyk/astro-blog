<>
  <h2>
    <span class="greeting-message">Hi!</span> Thank you for visiting my blog!
  </h2>
  <button class="greeting-button">New greeting</button>
</>

<style>
  .greeting-message {
    color: #215948;
  }

  .greeting-button {
    align-self: center;
    color: #215948;
    background-color: transparent;
    border: 3px solid #215948;
    border-radius: 16px;
    padding: 8px 24px;
    cursor: pointer;
    font-weight: 500;
    font-size: 1.125rem;
    font-family: inherit;
    line-height: 1.15;
  }

  .greeting-button:hover {
    color: #f4fffd;
    background-color: #075f37;
  }

  @media screen and (min-width: 400px) {
    .greeting-button {
      font-size: 1.25rem;
    }
  }
</style>

<script>
  const messages = ["Hi", "Hello", "Howdy", "Hey there"];

  const randomMessage = () => {
    return messages[Math.floor(Math.random() * messages.length)];
  };

  document.addEventListener("astro:page-load", () => {
    const message = document.querySelector(".greeting-message");
    const button = document.querySelector(".greeting-button");

    if (message && button) {
      button.addEventListener("click", () => {
        let msg: string;
        do {
          msg = `${randomMessage()}!`;
        } while (msg === message.textContent);
        message.textContent = msg;
      });
    }
  });
</script>
