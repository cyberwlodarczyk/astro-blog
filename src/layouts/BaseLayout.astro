---
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import Social from "../components/Social.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Sometype+Mono:ital,wght@0,400;0,500;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <title>{title} | Astro Blog</title>
    <style>
      body {
        display: flex;
        flex-direction: column;
        gap: 4rem;
        padding: 32px;
        max-width: 700px;
        margin: 0 auto;
      }

      main {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      footer {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
        margin: 0 auto;
      }
    </style>
    <ViewTransitions />
  </head>
  <body>
    <header>
      <Nav />
    </header>
    <main>
      <h1>{title}</h1>
      <slot />
    </main>
    <footer>
      <Social url="https://github.com/cyberwlodarczyk" platform="GitHub" />
      <Social url="https://twitter.com/astrodotbuild" platform="Twitter" />
      <Social url="https://youtube.com/astrodotbuild" platform="YouTube" />
    </footer>
  </body>
</html>
